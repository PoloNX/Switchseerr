<brls:Box
    highlightCornerRadius="8"
    axis="column"
    height="auto"
    wireframe="false"
    width="200">
    <brls:Box
        id="video/card/pic_box"
        axis="row"
        grow="1"
        height="300"
        width="100%"
        wireframe="false">
        <brls:Image
            id="video/card/picture"
            backgroundColor="@theme/color/grey_1"
            scalingType="fit"
            width="200"
            height="auto"
            image="@res/img/video-card-bg.png"
            cornerRadius="8"/>

        <brls:Box
            positionBottom="0"
            positionType="absolute"
            background="vertical_linear" 
            paddingLeft="10"
            paddingRight="10"
            width="100%"
            height="auto"
            alignItems="center">
            <brls:Image
                id="video/card/badge/bottom/left"
                scalingType="fit"
                height="16" />
            <brls:Label
                id="video/card/label/rating"
                positionType="absolute"
                positionRight="0"
                textColor="#FFFFFF"
                fontSize="16" />
        </brls:Box>

        <LabelBackground
            positionType="absolute"
            positionTop="5"
            positionLeft="5"
            width="100%"
            height="10%"
            wireframe="false"
            id="video/card/type/background"/>

        <SVGImage
            id="video/card/svg/icon"
            positionType="absolute"
            positionTop="5"
            positionRight="5"
            width="20"
            height="20"/>

    </brls:Box>

    <brls:Box
        axis="column"
        height="50"
        justifyContent="center"
        alignItems="center"
        width="200"
        paddingRight="10"
        paddingLeft="10">
        <brls:Label
            wireframe="false"
            id="video/card/label/title"
            fontSize="18"
            marginBottom="5" />
        <brls:Label
            wireframe="false"
            id="video/card/label/ext"
            fontSize="13"
            marginTop="5" />
    </brls:Box>

</brls:Box>