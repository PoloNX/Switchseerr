<brls:Box
    highlightCornerRadius="8"
    axis="column"
    height="auto">
    <brls:Box
        id="video/card/pic_box"
        axis="row"
        grow="1"
        height="300"
        wireframe="false"
        marginTop="5">
        <brls:Image
            id="video/card/picture"
            backgroundColor="@theme/color/grey_1"
            scalingType="fill"
            width="200"
            height="300"
            image="@res/img/video-card-bg.png"
            cornerRadius="8" />

        <brls:Box
            positionBottom="0"
            positionType="absolute"
            background="vertical_linear"
            paddingLeft="10"
            paddingRight="10"
            width="100%"
            height="10%"
            alignItems="center">
            <brls:Image
                id="video/card/badge/bottom/left"
                scalingType="fit"
                height="16" />
            <brls:Label
                id="video/card/label/rating"
                positionType="absolute"
                positionRight="0"
                textColor="#FFFFFF"
                fontSize="16" />
        </brls:Box>

        <LabelBackground
            positionType="absolute"
            positionTop="0"
            positionLeft="0"
            width="100%"
            height="10%"
            wireframe="true"
            id="video/card/type/background"/>

    </brls:Box>

    <brls:Box
        axis="column"
        height="50"
        justifyContent="spaceEvenly"
        alignItems="center"
        width="200">
        <brls:Label
            wireframe="false"
            id="video/card/label/title"
            fontSize="18" />
        <brls:Label
            wireframe="false"
            id="video/card/label/ext"
            fontSize="13" />
    </brls:Box>

</brls:Box>