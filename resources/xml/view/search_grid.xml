<brls:Box
    id="movie/content"
    width="auto"
    height="100%"
    axis="column"
    alignItems="center">

    <brls:Box
        width="90%"
        height="10%"
        id="media/search"
        alignItems="center"
        margin="10"
        wireframe="false">

        <SVGImage
            id="media/search/svg"
            width="19"
            height="18"
            marginLeft="10"
            marginRight="10" />
        <brls:Label
            id="media/search/input"
            marginTop="8"
            marginBottom="10" />

    </brls:Box>

    <RecyclingGrid
        paddingRight="20"
        grow="1"
        spanCount="5"
        itemHeight="350"
        wireframe="false"
        id="media/recycler"
        height="80%"
        width="100%"/>
    
    <brls:Box
        height="10%"
        width="50%"
        wireframe="false"
        id="media/page"
        justifyContent="spaceBetween"
        alignItems="center">

        <brls:Button
            id="media/page/prev"
            text="<"
            height="50%"/>

        <brls:Label
            id="media/page/label"
            fontSize="16"/>

        <brls:Button
            id="media/page/next"
            text=">"
            height="50%"/>

    </brls:Box>

</brls:Box>