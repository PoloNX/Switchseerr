<brls:Box
    width="auto"
    height="auto"
    wireframe="false"
    axis="column">

    <brls:AppletFrame
        id="season/applet"
        width="auto"
        height="auto"
        grow="1"
        headerHidden="true"
        footerHidden="true"
        backgroundColor="@theme/brls/backdrop">

        <brls:Box
            width="auto"
            height="auto"
            grow="1"
            axis="column"
            justifyContent="center"
            alignItems="center">

            <brls:Box
                id="season/content"
                width="80%"
                height="80%"
                axis="column"
                backgroundColor="@theme/brls/background"
                cornerRadius="8"
                alignItems="center"
                justifyContent="center">



                <!-- Title-->
                <brls:Box
                    axis="column"
                    width="auto"
                    height="auto"
                    wireframe="false"
                    marginTop="10"
                    marginBottom="10">

                    <brls:Label
                        text="Season Info"
                        id="season/title"
                        fontSize="25"/>

                </brls:Box>

                        
                <brls:ScrollingFrame
                    width="100%"
                    height="80%"
                    wireframe="false"
                    id="season/frame">

                    <brls:Box
                        axis="column"
                        width="100%"
                        height="auto"
                        alignItems="center"
                        justifyContent="center">
                        <brls:Box
                            padding="20"
                            axis="column"
                            width="100%"
                            height="auto"
                            wireframe="false"
                            id="season/episodes"
                            alignItems="center"
                            justifyContent="center">

                        </brls:Box>

                        <brls:Button
                            id="season/back_button"
                            text="Back"
                            margin="5"/>
                    </brls:Box>
                </brls:ScrollingFrame>

            </brls:Box>


        </brls:Box>

    </brls:AppletFrame>
</brls:Box>