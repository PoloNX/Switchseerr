           
<brls:Box
    height="100%"
    width="100%">

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        grow="1.0" >
    
        <brls:Box
            height="100%"
            width="100%"
            axis="column"
            paddingLeft="30"
            paddingRight="30">

                <!-- Head Content (Image, title, status, duration) -->

            <brls:Image
                positionType="absolute"
                scalingType="fill"
                image="@res/img/video-card-bg.png"
                width="1280"
                height="350"
                id="preview/video/backdrop"/>

            <brls:Box
                background="vertical_linear"
                positionType="absolute"
                width="1280"
                height="350">

            </brls:Box>

            <brls:Box
                width="100%"
                height="auto"
                axis="row"
                marginTop="20">

                <brls:Image
                    id="preview/video/poster"
                    backgroundColor="@theme/color/grey_1"
                    scalingType="fill"
                    width="200"
                    height="300"
                    image="@res/img/video-card-bg.png"
                    cornerRadius="8"/>

                <brls:Box
                    width="50%"
                    axis="column"
                    justifyContent="flexEnd"
                    marginLeft="20">

                    <brls:Label
                        id="preview/video/status"
                        text="Disponible"
                        fontSize="12"
                        marginTop="5"
                        marginBottom="5"/>

                    <brls:Label
                        id="preview/video/title"
                        text="Si tu tends l'oreille (1995)"
                        fontSize="30"
                        marginTop="5"
                        marginBottom="5"/>

                    <brls:Box
                        axis="row"
                        alignItems="flexStart"
                        marginTop="5"
                        marginBottom="5">

                        <brls:Label
                            id="preview/video/duration"
                            text="110 minutes"
                            fontSize="12"/>

                        <brls:Label
                            id="preview/video/genre"
                            text="Animation, Drame, Familial"
                            fontSize="12"
                            marginLeft="10"/>

                    </brls:Box>

                </brls:Box>

                <brls:Box
                    axis="row"
                    width="auto"
                    justifyContent="flexEnd"
                    alignItems="flexEnd">

                    <brls:Button
                        id="preview/video/favorite"
                        text="Favorite"
                        marginLeft="10"/>

                    <brls:Button
                        id="preview/video/request"
                        text="Request"
                        marginLeft="10"/>

                    <brls:Button
                        id="preview/video/report"
                        text="Report"
                        marginLeft="10"/>
                </brls:Box>
            </brls:Box>

            <!-- Description Content (Description, Trailer, Cast) -->
            <brls:Box
                width="100%"
                height="auto"
                axis="row"
                marginTop="50">

                <!-- Description -->
                <brls:Box
                    width="75%"
                    height="auto"
                    axis="column">

                    <brls:Label
                        text="Résumé"
                        fontSize="20"
                        marginBottom="5"/>

                    <brls:Label
                        id="preview/video/overview"
                        singleLine="false"
                        fontSize="12"
                        marginTop="5"/>

                </brls:Box>

            </brls:Box>


        </brls:Box>
    </brls:ScrollingFrame>
</brls:Box>