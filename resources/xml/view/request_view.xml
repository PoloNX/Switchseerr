<brls:Box
    width="auto"
    height="auto"
    wireframe="false"
    axis="column">

    <brls:AppletFrame
        id="request/applet"
        width="auto"
        height="auto"
        grow="1"
        headerHidden="true"
        footerHidden="true"
        backgroundColor="@theme/brls/backdrop">

        <brls:Box
            width="auto"
            height="auto"
            grow="1"
            axis="column"
            justifyContent="center"
            alignItems="center">

            <brls:Box
                id="request/content"
                width="600"
                height="330"
                axis="column"
                backgroundColor="@theme/brls/background"
                cornerRadius="8">

                <!-- Image -->
                <brls:Box
                    positionType="absolute"
                    positionTop="0"
                    positionLeft="0"
                    width="100%"
                    height="50%">

                    <brls:Image
                        width="100%"
                        height="100%"
                        scalingType="fill"
                        id="request/image"
                        cornerRadius="8"/>

                    <brls:Box
                        background="vertical_linear"
                        positionType="absolute"
                        width="100%"
                        height="100%"
                        id="request/image/background"
                        backgroundEndColor="@theme/color/background_end"
                        backgroundStartColor="@theme/color/background_start"
                        cornerRadius="8">

                    </brls:Box>

                    

                </brls:Box>


                <!-- Title-->
                <brls:Box
                    axis="column"
                    width="auto"
                    height="auto"
                    wireframe="false"
                    margin="20">

                    <brls:Label
                        text="Request Media"
                        id="request/title"
                        fontSize="18"
                        marginBottom="5"/>
                    
                    <brls:Label
                        text="Request a new media item to be added to the library."
                        id="request/media"
                        fontSize="14"
                        marginTop="5"/>

                </brls:Box>

                <brls:Box
                    axis="column"
                    width="auto"
                    height="auto"
                    margin="20">

                    <brls:Header
                        id="request/header"
                        title="Request Details"/>

                    <brls:DetailCell
                        id="request/quality"
                        title="Quality Profile"/>


                </brls:Box>

                <brls:Box
                    axis="row"
                    width="auto"
                    height="auto"
                    margin="20"
                    justifyContent="flexEnd">
                    
                    <brls:Button
                        id="request/button/cancel"
                        text="Deny"
                        margin="5"/>

                    <brls:Button
                        id="request/button/approve"
                        text="Approve"
                        margin="5"/>

                </brls:Box>

            </brls:Box>

        </brls:Box>

    </brls:AppletFrame>
</brls:Box>